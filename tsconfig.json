{
  "compilerOptions": {
    "composite": false, // does not work with true...
    "target": "esnext",
    "jsx": "react-jsx",
    "lib": ["ESNext"],
    "moduleDetection": "force",
    "rootDir": "./src",
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": [
      "bun-types" // add Bun global
    ],
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "downlevelIteration": true,
    "noEmit": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
